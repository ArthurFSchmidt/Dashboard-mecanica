<%= form_with model: servico, class:"col-10" do |form| %>
    <div>
        <%= form.label :nome, class:"form-label mt-2" %><br>
        <%= form.text_field :nome, class:"form-control" %>
        <% servico.errors.full_messages_for(:nome).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :descricao, class:"form-label mt-2" %><br>
        <%= form.text_field :descricao, class:"form-control" %>
        <% servico.errors.full_messages_for(:descricao).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :valor, class:"form-label mt-2" %><br>
        <%= form.text_field :valor, class:"form-control" %>
        <% servico.errors.full_messages_for(:valor).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div class="mt-3">
        <%= form.submit %>
    </div>
<% end %>