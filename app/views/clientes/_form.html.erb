<%= form_with model: cliente, class:"col-10" do |form| %>
    <div>
        <%= form.label :nome, class:"form-label mt-2" %><br>
        <%= form.text_field :nome, class:"form-control" %>
        <% cliente.errors.full_messages_for(:nome).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :endereco, class:"form-label mt-2" %><br>
        <%= form.text_field :endereco, class:"form-control" %>
        <% cliente.errors.full_messages_for(:endereco).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div>
        <%= form.label :telefone, class:"form-label mt-2" %><br>
        <%= form.text_field :telefone, class:"form-control"  %>
        <% cliente.errors.full_messages_for(:telefone).each do |message| %>
            <div><%= message %></div>
        <% end %>
    </div>

    <div class="mt-3">
        <%= form.submit %>
    </div>
<% end %>